<% if controller.send(:is_allowed_to_update?) %>
  <div class="block rounded">
    <h3>Modify Record</h3>
    <div style='padding-left:15px'>
      <p>
        <%= link_to 'Edit', crud_edit_path(:klass => klass.name.underscore, :id => model.id) %>
      </p>
      <p>
        <%= link_to 'Delete', crud_del_path(:klass => klass.name.underscore, :id => model.id) ,
               { :confirm => ' You are deleting (not destroying) a record. Are you sure?', :method => :delete} %>
      </p>
      <p>
        <%= link_to "Destroy", crud_show_path(:klass => klass.name.underscore, :id => model.id),
              { :confirm => 'You are destroying a record. Are you sure?', :method => :delete} %>
      </p>
    </div>
  </div>
<% end %>
