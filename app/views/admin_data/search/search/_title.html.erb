<div>
   <h2 class='title' id='search_result_title' style='float:left;margin-top:5px; padding-top:5px;'> 

   <% if params[:base] %>
         <%= link_to params[:base].camelize + ' ID ' + params[:model_id], 
                     admin_data_on_k_path(:klass => params[:base], :id => params[:model_id]) %>
         has <%= pluralize(total_num_of_children, params[:klass]) %>
   <% elsif !params[:query].blank? || params[:adv_search] %>
      Search result: <%= pluralize(records.total_entries,'record') %> found

   <% else %>
      All <%= params[:klass].camelize %> records 
   <% end %>  

   </h2>

   <% if admin_data_is_allowed_to_update? && params[:action] == 'advance_search' %>
     <div style='float:left;margin-top:6px;padding-top:6px;margin-left:20px;'>
      <span style=''>
         <%= link_to 'Delete All', '#', :id => 'advance_search_delete_all' %>
      </span>
      |
      <span> 
         <%= link_to 'Destroy All', '#', :id => 'advance_search_destroy_all' %>
      </span>
     </div>
   <% end %>

   <div class='clear'></div>

</div>
