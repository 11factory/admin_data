<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
  <head>
	  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>
      <%= @page_title.blank? ? 'admin_data' : "#{@page_title} - admin_data" %>
    </title>

    <%= stylesheet_link_tag('vendor/jquery-ui-1.7.2.custom.css') %>

    <%= stylesheet_link_tag('base') %>

    <%= javascript_include_tag('vendor/jquery-1.4.2.js', 'vendor/jquery-ui-1.7.2.custom.min.js') %>

    <%= javascript_include_tag('vendor/jquery_form') %>

    <%= javascript_include_tag('vendor/log',
                                               'vendor/rails',
                                               'misc/drop_down_change',
                                               'misc/quick_search_input_focus',
                                               'advance_search/global_ajax_setting',
                                               'misc/js_util') %>

    <% if params[:action] == 'advance_search' %>
      <%= javascript_include_tag(
                                                 'advance_search/advance_search',
                                                 'advance_search/advance_search_structure',
                                                 'advance_search/ajaxify_advance_search',
                                                 'advance_search/act_on_result',
                                                 'advance_search/build_first_row',
                                                 'advance_search/event_bindings',
                                                 'advance_search/trigger_submit_on_domready',
                                                 'advance_search/sortby'
                                                ) %>
    <% elsif params[:controller] == 'admin_data/analytics' %>
      <%= javascript_include_tag('analytics/report') %>
    <% end %>

    <%= csrf_meta_tag %>

  </head>

  <body>
    <noscript>
      <div id="noscript-warning">JavaScript is disabled. A few things might not work properly.</div>
      <br />
      <br />
    </noscript>
    <div>
      <%= render 'admin_data/shared/header', :drop_down_for_klasses => @drop_down_for_klasses %>
      <div class='clear'></div>
    </div>
    <div id="container">
      <div id="wrapper">

<div id='main'>
<div class="block" id="block-text">

  <div>
    <h1 class='listing_klass'> Listing <%=@klass.name%></h1>
    <h3 class='total_records_info_klass'><%=total_records_info(@klass)%></h3>
    <div class='clear'></div>
  </div>

  <div class="secondary-navigation">
    <%= render 'admin_data/shared/secondary_navigation', :klass => @klass %>
    <div class="clear"></div>
  </div>

  <div class="content">
    <%= yield %>
  </div>

  <div class='clear'></div>

  <div class='main2 rounded'>
    <div class="block" id="block-tables">
      <div class="content">
        <div class='inner'>
          <div id='results'>
            <% if params[:action] == 'quick_search' %>
              <%= render 'admin_data/search/search/listing', :klass => @klass, :records => @records %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

        <div class="clear"></div>
      </div>
      <%= render :partial => 'admin_data/shared/powered_by' %>
    </div>
  </body>

</html>

